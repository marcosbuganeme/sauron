<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<application>

		<message-bundle>br.com.coffeework.messages.Messages</message-bundle>

		<resource-bundle>

			<base-name>br.com.coffeework.messages.Messages</base-name>

			<var>msgs</var>

		</resource-bundle>

		<locale-config>

			<default-locale>pt_BR</default-locale>

			<supported-locale>en_US</supported-locale>

		</locale-config>

	</application>

	<factory>

		<exception-handler-factory>br.com.coffeework.util.jsf.JSFExceptionHandlerFactory</exception-handler-factory>

	</factory>

</faces-config>